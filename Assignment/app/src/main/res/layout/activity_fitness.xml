<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FitnessActivity">

    <TextView
        android:id="@+id/fitnessCaloriesBurnLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories Burnt: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.006" />

    <TextView
        android:id="@+id/fitnessCaloriesBurnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100kcal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/fitnessCaloriesBurnLabel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.006" />

    <TextView
        android:id="@+id/fitnessTargetLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.006" />

    <TextView
        android:id="@+id/fitnessTargetValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="900kcal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/fitnessTargetLabel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.006" />

    <TextView
        android:id="@+id/fitnessCurrentDayLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fitnessCaloriesBurnLabel"
        app:layout_constraintVertical_bias="0.011" />

    <TextView
        android:id="@+id/fitnessCompoundMovementLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Compound Movement:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fitnessCurrentDayLabel"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/fitnessCompoundMovementListView1"
        android:layout_width="378dp"
        android:layout_height="98dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fitnessCompoundMovementLabel"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/fitnessCompoundMovementListView2"
        android:layout_width="378dp"
        android:layout_height="98dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fitnessCompoundMovementListView1"
        app:layout_constraintVertical_bias="0.0" />

    <!--Isolation Stuff -->
    <TextView
        android:id="@+id/fitnessIsolationMovementLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Isolation Movement:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fitnessCompoundMovementListView2"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/fitnessIsolationMovementListView1"
        android:layout_width="378dp"
        android:layout_height="98dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fitnessIsolationMovementLabel"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/fitnessIsolationMovementListView2"
        android:layout_width="378dp"
        android:layout_height="98dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fitnessIsolationMovementListView1"
        app:layout_constraintVertical_bias="0.0" />

    <!--TEMP NEED TO FIGURE OUT ACTUAL NAV AGAIN-->
    <!--Make shift Nav Bar-->
    <ImageView
        android:id="@+id/fitnessNavBackground"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fitnessIsolationMovementListView2"
        app:layout_constraintVertical_bias="1"
        app:srcCompat="@drawable/nav_bar_background" />

    <!--BMI Button-->
    <ImageView
        android:id="@+id/fitnessBMIButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bmi_icon"
        app:layout_constraintBottom_toBottomOf="@+id/fitnessNavBackground"
        app:layout_constraintEnd_toEndOf="@+id/fitnessNavBackground"
        app:layout_constraintStart_toStartOf="@+id/fitnessNavBackground"
        app:layout_constraintTop_toTopOf="@+id/fitnessNavBackground"
        app:layout_constraintHorizontal_bias="0.1"/>

    <!--BMI Text-->
    <TextView
        android:id="@+id/fitnessBmiButtonLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/fitnessNavBackground"
        app:layout_constraintEnd_toEndOf="@+id/fitnessNavBackground"
        app:layout_constraintStart_toStartOf="@+id/fitnessNavBackground"
        app:layout_constraintTop_toTopOf="@+id/fitnessNavBackground"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.94"/>

    <!--Calorie Button-->
    <ImageView
        android:id="@+id/fitnessCalorieButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/calorie_icon"
        app:layout_constraintBottom_toBottomOf="@+id/fitnessNavBackground"
        app:layout_constraintEnd_toEndOf="@+id/fitnessNavBackground"
        app:layout_constraintStart_toStartOf="@+id/fitnessNavBackground"
        app:layout_constraintTop_toTopOf="@+id/fitnessNavBackground" />

    <!--Calorie Text-->
    <TextView
        android:id="@+id/fitnessCalorieButtonLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calorie"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/fitnessNavBackground"
        app:layout_constraintEnd_toEndOf="@+id/fitnessNavBackground"
        app:layout_constraintStart_toStartOf="@+id/fitnessNavBackground"
        app:layout_constraintTop_toTopOf="@+id/fitnessNavBackground"
        app:layout_constraintVertical_bias="0.94"/>

    <!--Fitness Button-->
    <ImageView
        android:id="@+id/fitnessFitnessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fitness_icon"
        app:layout_constraintBottom_toBottomOf="@+id/fitnessNavBackground"
        app:layout_constraintEnd_toEndOf="@+id/fitnessNavBackground"
        app:layout_constraintStart_toStartOf="@+id/fitnessNavBackground"
        app:layout_constraintTop_toTopOf="@+id/fitnessNavBackground"
        app:layout_constraintHorizontal_bias="0.9"/>

    <!--Fitness Text-->
    <TextView
        android:id="@+id/fitnessFitnessButtonLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fitness"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/fitnessNavBackground"
        app:layout_constraintEnd_toEndOf="@+id/fitnessNavBackground"
        app:layout_constraintStart_toStartOf="@+id/fitnessNavBackground"
        app:layout_constraintTop_toTopOf="@+id/fitnessNavBackground"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintVertical_bias="0.94"/>
</androidx.constraintlayout.widget.ConstraintLayout>