<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--New item name-->
    <EditText
        android:id="@+id/editCaloriesItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="New item name"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--New item quantity-->
    <EditText
        android:id="@+id/editCaloriesItemQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="New item quantity"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCaloriesItemName"
        app:layout_constraintVertical_bias="0.026" />

    <!--New item calories-->
    <EditText
        android:id="@+id/editCaloriesItemCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="New item calories"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCaloriesItemQuantity"
        app:layout_constraintVertical_bias="0.026" />
</androidx.constraintlayout.widget.ConstraintLayout>