<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BMIActivity">

    <!--Measurement Label-->
    <TextView
        android:id="@+id/bmiMetricLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Measurement"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032" />

    <!--Metric Switch-->
    <Switch
        android:id="@+id/bmiMetricToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metric"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <!--Height Text-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.104" />

    <!--Height Text Field Metric-->
    <EditText
        android:id="@+id/bmiHeightTextField"
        android:layout_width="290dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="cm"
        android:gravity="right"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.844"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <!--Height Text Field Imperial-->
    <!--Foot-->
    <EditText
        android:id="@+id/bmiFootTextField"
        android:layout_width="142dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="foot"
        android:gravity="right"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.107" />
    <!--Inches-->
    <EditText
        android:id="@+id/bmiInchesTextField"
        android:layout_width="142dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="inch"
        android:gravity="right"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.936"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.107" />

    <!--Weight Text-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173" />

    <!--Weight Text Field Metric-->
    <EditText
        android:id="@+id/bmiWeightTextField"
        android:layout_width="290dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="kg"
        android:gravity="right"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.844"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.179" />
    <!--Weight Text Field Imperial-->
    <!--Stone-->
    <EditText
        android:id="@+id/bmiStoneTextField"
        android:layout_width="142dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="stone"
        android:gravity="right"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.178" />
    <!--Lbs-->
    <EditText
        android:id="@+id/bmiLbsTextField"
        android:layout_width="142dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="lbs"
        android:gravity="right"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.936"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.178" />

    <!--Age Text-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.239" />

    <!--Age Text Field-->
    <EditText
        android:id="@+id/bmiAgeTextField"
        android:layout_width="290dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.844"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.246" />

    <!--Calculate BMI Button-->
    <Button
        android:id="@+id/bmiCalculateBMIButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate BMI"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.932"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.312" />

    <!--BMI Text-->
    <TextView
        android:id="@+id/bmiBMILabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.367" />

    <!--BMI Text Field-->
    <EditText
        android:id="@+id/bmiBMIResult"
        android:layout_width="290dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.844"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.379" />

    <!--Make shift Nav Bar-->
    <ImageView
        android:id="@+id/bmiNavBackground"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bmiBMIResult"
        app:layout_constraintVertical_bias="1"
        app:srcCompat="@drawable/nav_bar_background" />

    <!--BMI Button-->
    <ImageView
        android:id="@+id/bmiBMIButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bmi_icon"
        app:layout_constraintBottom_toBottomOf="@+id/bmiNavBackground"
        app:layout_constraintEnd_toEndOf="@+id/bmiNavBackground"
        app:layout_constraintStart_toStartOf="@+id/bmiNavBackground"
        app:layout_constraintTop_toTopOf="@+id/bmiNavBackground"
        app:layout_constraintHorizontal_bias="0.1"/>

    <!--BMI Text-->
    <TextView
        android:id="@+id/bmiBmiButtonLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/bmiNavBackground"
        app:layout_constraintEnd_toEndOf="@+id/bmiNavBackground"
        app:layout_constraintStart_toStartOf="@+id/bmiNavBackground"
        app:layout_constraintTop_toTopOf="@+id/bmiNavBackground"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.94"/>

    <!--Calorie Button-->
    <ImageView
        android:id="@+id/bmiCalorieButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/calorie_icon"
        app:layout_constraintBottom_toBottomOf="@+id/bmiNavBackground"
        app:layout_constraintEnd_toEndOf="@+id/bmiNavBackground"
        app:layout_constraintStart_toStartOf="@+id/bmiNavBackground"
        app:layout_constraintTop_toTopOf="@+id/bmiNavBackground" />

    <!--Calorie Text-->
    <TextView
        android:id="@+id/bmiCalorieButtonLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caloire"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/bmiNavBackground"
        app:layout_constraintEnd_toEndOf="@+id/bmiNavBackground"
        app:layout_constraintStart_toStartOf="@+id/bmiNavBackground"
        app:layout_constraintTop_toTopOf="@+id/bmiNavBackground"
        app:layout_constraintVertical_bias="0.94"/>

    <!--Fitness Button-->
    <ImageView
        android:id="@+id/bmiFitnessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fitness_icon"
        app:layout_constraintBottom_toBottomOf="@+id/bmiNavBackground"
        app:layout_constraintEnd_toEndOf="@+id/bmiNavBackground"
        app:layout_constraintStart_toStartOf="@+id/bmiNavBackground"
        app:layout_constraintTop_toTopOf="@+id/bmiNavBackground"
        app:layout_constraintHorizontal_bias="0.9"/>

    <!--Fitness Text-->
    <TextView
        android:id="@+id/bmiFitnessButtonLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fitness"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/bmiNavBackground"
        app:layout_constraintEnd_toEndOf="@+id/bmiNavBackground"
        app:layout_constraintStart_toStartOf="@+id/bmiNavBackground"
        app:layout_constraintTop_toTopOf="@+id/bmiNavBackground"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintVertical_bias="0.94"/>

    <!--Some info about the users weight status-->
    <TextView
        android:id="@+id/bmiUserResultsInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI Results"
        app:layout_constraintBottom_toTopOf="@+id/bmiNavBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bmiBMIResult"
        app:layout_constraintVertical_bias="0.152" />
</androidx.constraintlayout.widget.ConstraintLayout>